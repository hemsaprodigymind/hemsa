<% layout('layout/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Edit Post</h1>
    <div class="col-6 offset-3">
        <form action="/places/<%=place._id%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title for Your Post</label>
                <input class="form-control" type="text" name="title" id="title" placeholder="enter title" value="<%=place.title%>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location"> Enter location</label>
                <input class="form-control" type="text" name="location" id="location" placeholder="enter location" value="<%=place.location %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="days">How many days You stayed here</label>
                <input class="form-control" type="text" name="days" id="days" placeholder="Enter Days"  value="<%=place.days%>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Enter description</label>
                <textarea class="form-control" type="text" name="description" id="description" placeholder="Enter desc" required><%=place.description%></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Enter Image URL</label>
                <input class="form-control" type="text" name="image" id="image" placeholder="Enter url" required value="<%=place.image%>">
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Update</button>
            </div>  
        </form>
    </div>
</div>